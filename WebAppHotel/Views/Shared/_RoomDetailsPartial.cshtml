@model IEnumerable<WebAppHotel.ViewModel.RoomDetailsViewModel>


<table class="table">

    <thead>
        <tr>
            <th>
                Action

            </th>
            <th>
                Room Image
            </th>
            <th>
                Room No.
            </th>
            <th>

                Room Price
            </th>
            <th>
                Booking Status
            </th>
            <th>
                Room Type
            </th>
            <th>
                Room Capacity
            </th>
            <th>
                Room Description
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span id="btnDelete" class="glyphicon  glyphicon-trash" onclick="DeleteRoom(@item.RoomId)"></span>&nbsp;&nbsp;
                    <span id="btnEdit"   class="glyphicon  glyphicon-pencil" onclick="EditRoom(@item.RoomId)"></span>&nbsp;&nbsp;

                </td>
                <td>
                    <img src="@Url.Content("~/RoomImages/" +item.RoomImage)" width="30" height="30" class="img-responsive" />
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.RoomPrice
                </td>
                <td>
                    @item.BookingStatus
                </td>
                <td>
                    @item.RoomType
                </td>
                <td>
                    @item.RoomCapacity
                </td>
                <td>
                    @item.RoomDescription
                </td>
               </tr>
   }
    </tbody>

</table>
